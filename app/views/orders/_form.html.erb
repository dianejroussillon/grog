
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :address %>
    <%= f.input :code_postal %>
    <%= f.input :city %>
    <div class="form-group select required order_product hidden">
      <label class="form-control-label select required" for="order_product_id">Product <abbr title="required">*</abbr></label>
      <select class="form-control select required" name="order[product_id]" id="order_product_id">
      <option value="1">Grog</option>
      </select>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "pay" %>
  </div>
<% end %>
