
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :ingredient_1 %>
    <%= f.input :ingredient_2 %>
    <%= f.input :ingredient_3 %>
    <%= f.input :ingredient_4 %>
    <%= f.input :quantity_1 %>
    <%= f.input :quantity_2 %>
    <%= f.input :quantity_3 %>
    <%= f.input :quantity_4 %>
    <%= f.input :content_1 %>
    <%= f.input :content_2 %>
    <%= f.input :content_3 %>
    <%= f.input :content_4 %>
    <%= f.input :description_1 %>
    <%= f.input :description_2 %>
    <%= f.input :description_3 %>
    <%= f.input :description_4 %>
    <%= f.input :quantity_asked %>
    <%= f.input :sub_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
